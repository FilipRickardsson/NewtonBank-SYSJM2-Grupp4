      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="content">
               <children>
                  <Label text="Name" />
                  <TextField fx:id="changeName" />
                  <Label text="Label" />
                  <Button fx:id="change" mnemonicParsing="false" onAction="#buttonChange" text="Change" />
                  <Label text="SSN:" />
                  <Label fx:id="Prn" styleClass="greyLabel" text="Personnummer" />
                  <Label text="KONTON" />
                  <ListView fx:id="listOfAccounts" prefHeight="200.0" prefWidth="200.0" />
                  <Button fx:id="remove" mnemonicParsing="false" onAction="#buttonRemove" text="Remove" />
                  <Button fx:id="select" mnemonicParsing="false" onAction="#buttonSelect" text="Select" />
